<div class="container anime-container">
    <div class="image-container"></div>
    <div class="anime-details">
        <div class="anime-header">
            <h1><%= anime.name %></h1>
            <h3><%= anime.rating %></h3>
        </div>
        <hr>
        <div class="anime-genres">
            <% anime.genres.forEach((value) => { %>
                <p><%= value %></p>
            <% }) %>
        </div>
        <p class="anime-description"><%= anime.description %></p>

        <% if ( isAuthenticated ) { %>
            <div class="anime-commands">
                <button class="update-anime">Update</button> 
                <button class="delete-anime">Delete</button>
            </div>
        <% } %>
    </div>
</div>

<script>
    const updateAnime = document.querySelector(".update-anime");
    updateAnime.addEventListener("click", () => {
        location.href = '../admin/update/<%= anime.id %>'
    })

    const deleteAnime = document.querySelector(".delete-anime");
    deleteAnime.addEventListener("click", () => {
        if(confirm("Are you sure do you want to delete this? This cannot be reversed!")) {
            location.href = '../delete?id=<%= anime.id %>'
        }
    })
</script>